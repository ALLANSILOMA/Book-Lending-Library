<h1>Edit Book</h1>

<%= form_with(model: @book, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
      <%= form.label :isbn, "ISBN" %><br>
      <%= form.text_field :isbn %>
    </div>

  <div>
    <%= form.label :available, "Availability" %>
    <%= form.select :available, [['Available', true], ['Borrowed', false]] %>
  </div>

  <div>
    <%= form.submit "Update Book" %>
  </div>
<% end %>
